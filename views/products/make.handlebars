<form method="post" action="/products">
    <div>
        <label>Name</label>
        <input type="text" name="name"/>
    </div>
    <div>
        <label>Categories</label>
        <label> Pants<input type="checkbox" name="categories" value="Pants" /> </label>
        <label> Shorts<input type="checkbox" name="categories" value="Shorts" /></label>
        <label> Swimwear<input type="checkbox" name="categories" value="Swimwear" /></label>
    </div>
    <div>
        <label>Price</label>
        <input type="number" name="price"/>
    </div>
    <div>
        <input type="submit" value="Create Product"/>
    </div>
</form>